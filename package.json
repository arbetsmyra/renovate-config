{
  "name": "@arbetsmyra/renovate-config",
  "version": "1.3.0",
  "description": "Arbetsmyra's Renovate config",
  "renovate-config": {
    "default": {
      "description": "Arbetsmyra's Renovate config",
      "extends": [
        "config:base",
        ":pinAllExceptPeerDependencies",
        ":separateMajorReleases",
        ":rebaseStalePrs",
        ":prImmediately",
        ":prHourlyLimitNone",
        ":prConcurrentLimit20",
        ":automergeDigest",
        ":automergePatch",
        ":automergeMinor",
        ":automergeBranch",
        ":respectLatest",
        ":npm"
      ]
    }
  },
  "scripts": {
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "lint:fix": "npm run prettier:write",
    "lint": "npm run prettier:check",
    "test": "npm run lint",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arbetsmyra/renovate-config.git"
  },
  "keywords": [
    "renovate",
    "renovate-config",
    "arbetsmyra"
  ],
  "author": "Anthon <anthon.kendel@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arbetsmyra/renovate-config/issues"
  },
  "homepage": "https://github.com/arbetsmyra/renovate-config#readme",
  "devDependencies": {
    "@arbetsmyra/commitlint-config": "1.2.0",
    "@arbetsmyra/prettier-config": "1.1.0",
    "@arbetsmyra/semantic-release-config": "1.0.2",
    "@commitlint/cli": "8.3.5",
    "husky": "4.2.5",
    "prettier": "2.0.5"
  },
  "prettier": "@arbetsmyra/prettier-config",
  "commitlint": {
    "extends": [
      "@arbetsmyra"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint:fix"
    }
  },
  "renovate": {
    "extends": [
      "@arbetsmyra"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "extends": [
      "@arbetsmyra/semantic-release-config"
    ]
  }
}
